[user]
	name = Nick Stevens
	email = nick@bitcurry.com
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
	eol = lf
	autocrlf = input
[pager]
	diff = ( command -v diff-so-fancy 2>&1 >/dev/null && diff-so-fancy || cat ) | less --tabs=4 -RFX
	show = ( command -v diff-so-fancy 2>&1 >/dev/null && diff-so-fancy || cat ) | less --tabs=4 -RFX
	unpushed = false
[push]
	default = simple
[diff]
	tool = vimdiff
	guitool = meld
	compactionHeuristic = true
	renames = copies
[merge]
	defaultToUpstream = true
[color "diff-highlight"]
	oldNormal = 9 bold
	oldHighlight = 9 bold 52
	newNormal = 10 bold
	newHighlight = 10 bold 22
[diff-so-fancy]
	markEmptyLines = false
[rebase]
	autosquash = true
[tag]
	gpgsign = true
[commit]
	verbose = true
[alias]
	authors = !git log --format=\"%an <%ae>\" | sort | uniq -c | sort -nr
	fap = fetch --all --prune
	ls = lsbranch
	mf = merge --ff-only
	mfu = merge --ff-only upstream/master
	wip = !git add -A && git commit -m \"WIP\"
	unpushed = log --branches --not --remotes=origin --no-walk --decorate --oneline
	unwip = reset HEAD^
[credential]
	helper = store
